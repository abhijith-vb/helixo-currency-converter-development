{
    "extends": [
        "wesbos"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-console": 1,
        "useTabs": 0,
        // "space-before-function-paren": [
        //     "error",
        //     "always"
        // ],
        "prettier/prettier": [
            "error",
            {
                "indent": [
                    "error",
                    4
                ],
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 4
                // "spaceBeforeFunctionParen": true
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    }
}